<%= form_for @attendee, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, "Name*", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :semester_season, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :semester_season, [['Fall','Fall'],['Spring','Spring']] %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :semester_year, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :semester_year, (1984..2013) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.phone_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, "Email*", :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attendees, "Attendees*", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :attendees, (1..10) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :Submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                attendees_path, :class => 'btn' %>
  </div>
<% end %>
